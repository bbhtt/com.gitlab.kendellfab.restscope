{
    "app-id": "com.gitlab.kendellfab.restscope",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.dmd"
    ],
    "command": "restscope",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "sourceview",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/GNOME/gtksourceview/archive/4.6.0.zip",
                    "sha256": "b0c71798475cf92fe27a20d2cb15153985efb03b6edc3c220d9e424cde124037"
                }
            ]
        },
        {
            "name": "restscope",
            "buildsystem": "simple",
            "build-options": {
                "append-path": "/usr/lib/sdk/dmd/bin"
            },
            "build-commands": [
                "dub build --skip-registry=all --build=release",
                "install -D restscope /app/bin/restscope",
                "install -d /app/share/applications",
                "install -D resources/flatpak/com.gitlab.kendellfab.restscope.desktop /app/share/applications",
                "install -d /app/share/icons/hicolor/512x512/apps",
                "install -D resources/restscope-512.png /app/share/icons/hicolor/512x512/apps/com.gitlab.kendellfab.restscope.png",
                "install -d /app/share/metainfo",
                "install -D resources/flatpak/com.gitlab.kendellfab.restscope.appdata.xml /app/share/metainfo/com.kendellfab.restscope.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/kendellfab/rest-scope",
                    "tag": "v0.25",
                    "commit": "b9a99417c54c75c111146a1acdad4cd6e60b8196"
                },
                "generated-sources.json"
            ]
        }
    ]
}